<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/saved_mix_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/saved_mix_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/textColor"
        android:backgroundTint="@color/backgroundColor"
        app:layout_constraintStart_toEndOf="@+id/saved_mix_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_borderless"
        app:backgroundTint="@null"
        android:drawableEnd="@drawable/ic_baseline_delete_24"
        android:drawableRight="@drawable/ic_baseline_delete_24"
        android:id="@+id/saved_mix_delete"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="5dp"
        android:paddingStart="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>